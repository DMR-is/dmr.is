{
  "extends": ["../../.eslintrc.yml"],
  "ignorePatterns": ["!**/*"],
  "overrides": [
    {
      "files": ["*.ts", "*.tsx", "*.js", "*.jsx"],
      "rules": {}
    },
    {
      "files": ["*.ts", "*.tsx"],
      "rules": {}
    },
    {
      "files": ["*.js", "*.jsx"],
      "rules": {}
    }
  ],
  "rules": {
    "no-restricted-imports": [
      "error",
      {
        "paths": [
          {
            "name": "@dmr.is/logging",
            "message": "Use @dmr.is/logging-next in Next.js applications for Edge Runtime compatibility"
          }
        ]
      }
    ]
  }
}
