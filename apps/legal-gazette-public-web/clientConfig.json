          "category": { "$ref": "#/components/schemas/CategoryDto" },
          "type": { "$ref": "#/components/schemas/TypeDto" },
          "status": { "$ref": "#/components/schemas/StatusDto" },
          "scheduledAt": { "type": "string" },
          "assignedUser": { "type": "string" },
          "hasInternalComments": { "type": "boolean" }
