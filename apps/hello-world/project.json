{
  "name": "hello-world",
  "$schema": "../../node_modules/nx/schemas/project-schema.json",
  "sourceRoot": "apps/hello-world",
  "projectType": "application",
  "targets": {
    "build": {
      "executor": "@nx/next:build",
      "outputs": ["{options.outputPath}"],
      "defaultConfiguration": "production",
      "options": {
        "outputPath": "apps/hello-world/dist"
      },
      "configurations": {
        "development": {
          "outputPath": "apps/hello-world"
        },
        "production": {}
      }
    },
    "serve": {
      "executor": "@nx/next:server",
      "defaultConfiguration": "development",
      "options": {
        "buildTarget": "hello-world:build",
        "dev": true
      },
      "configurations": {
        "development": {
          "buildTarget": "hello-world:build:development",
          "dev": true
        },
        "production": {
          "buildTarget": "hello-world:build:production",
          "dev": false
        }
      }
    },
    "export": {
      "executor": "@nx/next:export",
      "options": {
        "buildTarget": "hello-world:build:production"
      }
    },
    "test": {
      "executor": "@nx/jest:jest",
      "outputs": ["{workspaceRoot}/coverage/{projectRoot}"],
      "options": {
        "jestConfig": "apps/hello-world/jest.config.ts"
      }
    },
    "lint": {
      "executor": "@nx/eslint:lint",
      "outputs": ["{options.outputFile}"]
    },
    "update-openapi-schema": {
      "executor": "nx:run-commands",
      "options": {
        "commands": [
          "curl http://localhost:3000/swagger-json > clientConfig.json",
          "prettier --write clientConfig.json"
        ],
        "parallel": true,
        "cwd": "apps/hello-world"
      }
    },
    "generate": {
      "executor": "nx:run-commands",
      "options": {
        "command": "yarn openapi-generator -o apps/hello-world/gen/fetch -i apps/hello-world/clientConfig.json"
      },
      "outputs": ["{projectRoot}/gen/fetch"]
    }
  },
  "tags": []
}
