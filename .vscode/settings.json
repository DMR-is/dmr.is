{
  // Tell Copilot to look for .instructions.md files in app folders
  "chat.instructionsFilesLocations": {
    ".github/instructions": true,
    ".github/**/.instructions.md": true,
    "apps/**/.instructions.md": true,
    "libs/**/.instructions.md": true
  },
  "typescript.tsdk": "node_modules/typescript/lib",
  "typescript.tsserver.maxTsServerMemory": 8192,
  "typescript.disableAutomaticTypeAcquisition": true,
  "typescript.tsserver.experimental.enableProjectDiagnostics": false,
  // Verbose logging disabled to prevent massive log files (300MB+)
  // Uncomment only when debugging: "typescript.tsserver.log": "verbose",
  // Uncomment only when debugging: "typescript.tsserver.trace": "verbose",
  "typescript.tsserver.watchOptions": {
    "excludeDirectories": [
      "**/node_modules",
      "**/.git",
      "**/.yarn",
      "**/dist",
      "**/.next",
      "**/.cache",
      "**/submodules"
    ]
  },
  "git.detectSubmodules": false,
  "search.exclude": {
    ".githooks": true,
    ".yarn": true,
    ".cache": true,
    "node_modules": true,
    "submodules": true,
    "dist": true,
    "nx": true,
    "tmp": true,
    "yarn.lock": true,
    "eslint-local-rules.js": true,
    "**/.next": true
  },
  "eslint.workingDirectories": [
    {
      "mode": "auto"
    }
  ],
}
