{
  "compilerOptions": {
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "module": "esnext",
    "target": "es2015",
    "baseUrl": ".",
    "declaration": false,
    "sourceMap": true,
    "importHelpers": true,
    "allowSyntheticDefaultImports": true,
    "moduleResolution": "bundler",
    "esModuleInterop": true,
    "moduleDetection": "force",
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true,
    "skipDefaultLibCheck": true,
    "types": [
      "node",
      "multer"
    ],
    "typeRoots": [
      "node_modules/@types"
    ],
    "paths": {
      "@island.is/auth-nest-tools": [
        "submodules/island.is/libs/auth-nest-tools/src/lib/auth.ts"
      ],
      "@island.is/island-ui/core": [
        "submodules/island.is/libs/island-ui/core/src/index.ts"
      ],
      "@island.is/island-ui/core/*": [
        "submodules/island.is/libs/island-ui/core/src/lib/*"
      ],
      "@island.is/island-ui/core/globalCss": [
        "submodules/island.is/libs/island-ui/core/src/styles/global.css.ts"
      ],
      "@island.is/island-ui/core/globalStyles": [
        "submodules/island.is/libs/island-ui/core/src/utils/globalStyles.ts"
      ],
      "@island.is/island-ui/core/hooks/*": [
        "submodules/island.is/libs/island-ui/core/src/hooks/*"
      ],
      "@island.is/island-ui/core/utils/*": [
        "submodules/island.is/libs/island-ui/core/src/utils/*"
      ],
      "@island.is/island-ui/theme": [
        "submodules/island.is/libs/island-ui/theme/src/index.ts"
      ],
      "@island.is/island-ui/utils": [
        "submodules/island.is/libs/island-ui/utils/src/index.ts"
      ],
      "@island.is/island-ui/vanilla-extract-utils": [
        "submodules/island.is/libs/island-ui/vanilla-extract-utils/src/index.ts"
      ],
      "@island.is/regulations/styling": [
        "submodules/island.is/libs/regulations/src/lib/styling.ts"
      ],
      "@island.is/shared/constants": [
        "submodules/island.is/libs/shared/constants/src/index.ts"
      ],
      "@island.is/shared/pii": [
        "submodules/island.is/libs/shared/pii/src/index.ts"
      ],
      "@island.is/shared/types": [
        "submodules/island.is/libs/shared/types/src/index.ts"
      ],
      "@island.is/shared/utils": [
        "submodules/island.is/libs/shared/utils/src/index.ts"
      ],
      // Bundler moduleResolution: redirect packages missing "types" in their exports
      "oidc-client-ts": [
        "node_modules/oidc-client-ts/dist/types/oidc-client-ts.d.ts"
      ],
      "react-pdf": [
        "node_modules/react-pdf/dist/cjs/index.d.ts"
      ],
      "react-select": [
        "node_modules/react-select/dist/react-select.cjs.d.ts"
      ],
      "react-select/base": [
        "node_modules/react-select/base/dist/react-select-base.cjs.d.ts"
      ],
      "react-select/dist/declarations/src/Select": [
        "node_modules/react-select/dist/declarations/src/Select.d.ts"
      ]
    }
  },
  "exclude": [
    "node_modules",
    "tmp"
  ]
}
